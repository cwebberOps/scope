<%= error_messages_for(@standard) %>

<table summary="Standard Fields">
  <tr>
    <th><%= f.label(:designation) %></th> 
    <td><%= f.text_field(:designation) %></td>
  </tr>
  <tr>
    <th><%= f.label(:standard_subject_id, "Standard Subject") %></th>
    <td><%= f.select(:standard_subject_id, @standard_subjects.collect {|ss| [ss.name, ss.id]}) %></td>
  </tr>
  <tr>
    <th><%= f.label(:value, "Text") %></th>
    <td><%= f.text_area(:value, :size => '40x10') %></td>
  </tr>

</table>
