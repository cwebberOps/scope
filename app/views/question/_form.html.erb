<%= error_messages_for(@question) %>
<%= f.hidden_field(:assessment_id) %>
<table summary="Question Fields">
  <tr>
    <th><%= f.label(:value, "Question Text") %></th>
    <td><%= f.text_area(:value, :size => '40x10') %></td>
  </tr>
  <tr>
    <th><%= f.label(:image) %></th>
    <td>
      <% if @question.image_file_name %>
        <%= image_tag @question.image.url(:medium) %><br />
      <% end %>
      <%= f.file_field(:image) %>
    </td>
  </tr>
  <tr>
    <th><%= f.label(:sub_standard_id, "Standard") %></th>
    <td><%= f.select(:sub_standard_id, @sub_standards.collect {|ss| [ss.full_name, ss.id]}) %></td>
  </tr>
  
</table>