<% @page_title = "#{@assessment.name}: New Question" %>

<%= link_to("<< Back to List", {:action => 'list', :assessment_id => @assessment.id}, :class => 'back-link') %>

<div class="lookup new">
  <h2><%= @page_title %></h2>
  <%= form_for(:question, :url => {:action => 'create'}) do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= submit_tag("Create Question") %>
    </div>
  <% end %>
</div>
